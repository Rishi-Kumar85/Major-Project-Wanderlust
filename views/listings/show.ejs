<% layout("layouts/boilerplate") %>
<script>
  const listingCoords=  JSON.parse('<%- JSON.stringify(listing.geometry.coordinates) %>');
  const listingTitle = "<%= listing.title %>";
  const listingLocation = "<%= listing.location %>";
</script>
<script src="/js/map.js"></script>
<div class="row">
  <div class="col-12 mt-3 mb-2 text-center">
    <h1>Listing Details</h1>
  </div>
  <div class="card card-texture col-6 mt-3 offset-3">
    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing Image">
    <h2 class="text-center mt-3 mb-2"><b><%= listing.title %></b></h2>

    <div class="card-body">
      <p class="card-text text-center"><%= listing.description %></p>
      <p class="text-center">
        &#8377;<%= listing.price?.toLocaleString("en-IN") %>/day<br>
        <i class="fa-solid fa-location-dot"></i> <%= listing.location %>, <%= listing.country %>
      </p>
      <p class="text-center">Owned By: <strong><%= listing.owner.username %></strong></p>

      <div class="d-flex justify-content-center gap-2 flex-wrap mt-3">
        <a href="/listings" class="btn btn-primary flex-grow-1 flex-md-grow-0">Back to Listings</a>
        <a href="/" class="btn btn-secondary flex-grow-1 flex-md-grow-0">Home</a>
        <% if (currentUser && currentUser._id.equals(listing.owner._id)) { %>
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning flex-grow-1 flex-md-grow-0">Edit</a>
          <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button class="btn btn-danger flex-grow-1 flex-md-grow-0" type="submit" onclick="return confirm('Are you sure you want to delete this listing?');">Delete</button>
          </form>
        <% } %>
      </div>

      <% if (currentUser && !currentUser._id.equals(listing.owner._id)) { %>
        <div class="col-12 text-center mt-4 mb-3">
          <h4>Leave a Review</h4>
          <form action="/listings/<%= listing._id %>/reviews" method="POST" class="d-flex flex-column align-items-center needs-validation" novalidate>
            <div class="w-75 mb-2">
              <label for="rating" class="form-label">Rating</label>
              <div class="d-flex justify-content-center">
                <fieldset class="starability-slot center">
                  <% for (let i = 1; i <= 5; i++) { %>
                    <input type="radio" id="rate<%= i %>" name="review[rating]" value="<%= i %>" <%= i === 1 ? 'checked' : '' %> />
                    <label for="rate<%= i %>" title="<%= ['Terrible','Not good','Average','Very good','Amazing'][i-1] %>"><%= i %> star</label>
                  <% } %>
                </fieldset>
              </div>
            </div>

            <div class="mb-3 w-75">
              <label for="comment" class="form-label">Comment</label>
              <textarea class="form-control" id="comment" name="review[comment]" rows="3" required></textarea>
              <div class="invalid-feedback">Please enter a comment for review.</div>
            </div>

            <button type="submit" class="btn btn-success">Submit Review</button>
          </form>
        </div>
      <% } %>

      <hr class="my-4">

      <div class="col-12 text-center mt-3 mb-2">
        
        <% if (listing.reviews.length === 0) { %>
          <% if(!currentUser) { %>
            <p class="text-muted text-center">Login to review.</p>
            <% } else { %>
               <% if(!currentUser._id.equals(listing.owner._id)){ %>
            <p class="text-muted text-center">No reviews yet. Be the first to review!</p>
          <% } else{ %>
                <p class="text-muted text-center">Owner can't review.</p>
          <% } %>
          <% } %>
        <% } else { %>
          <% if(!currentUser) { %>
            <p class="text-muted text-center">Login to review.</p>
            <% } else { %>
               <% if(!currentUser._id.equals(listing.owner._id)){ %>
            <p class="text-muted text-center">Add some review.</p>
          <% } else{ %>
                <p class="text-muted text-center">Owner can't review.</p>
          <% } %>
          <% } %>
           <h4>Reviews</h4>
          <div class="row">
            <% listing.reviews.forEach((review) => { %>
              <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100 d-flex flex-column">
                  <div class="card-body d-flex flex-column justify-content-between text-center">
                    <div>
                      <h5 class="card-title"><strong>@<%= review.author.username %></strong></h5>
                      <div class="d-flex justify-content-center mb-2">
                        <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                      </div>
                      <p class="card-text"><%= review.comment %></p>
                    </div>
                    <% if (currentUser && currentUser._id.equals(review.author._id)) { %>
                      <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="mt-auto">
                        <button class="btn btn-danger btn-sm" type="submit" onclick="return confirm('Are you sure you want to delete this review?');">Delete</button>
                      </form>
                    <% } %>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>
      </div>

      <!-- ðŸŒ Map Section -->
      <div class="col-12 text-center mt-4 mb-3">
        <h4>Location Map</h4>
        <div id="map"></div>
      </div>
    </div>
  </div>
</div>


